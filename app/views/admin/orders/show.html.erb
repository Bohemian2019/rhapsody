<div class="container">
  <div class="row">
    <h1>受注情報詳細</h1>
  </div>
<br>
  <div class="row">
    <div class="col">
    <p>日付 <%= @order.updated_at.strftime('%Y/%m/%d') %></p>
    </div>
  </div>
  <div class="row">
    <img src="https://upload.wikimedia.org/wikipedia/ja/b/b5/Noimage_image.png">
    <div class="col">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">アーティスト</th>
            <th scope="col">シングル／アルバム名</th>
            <th scope="col">価格</th>
            <th scope="col">枚数</th>
          </tr>
        </thead>
      <% @item.each do |item| %>
        <tbody>
         <tr>
            <td><%= item.artist.artist_name %></td>
            <td><%= item.item_name %></td>
            <td><%= @cart.price %>円</td>
            <td><%= @cart.quantity %>枚</td>
        </tr>
        </tbody>
      <% end %>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-3 offset-9">
      <p>ステータス　<%= @order.status %></p>
      <p>合計金額 <%= @total %>円（税込)</p>
    </div>
  </div>


<br>
  <div class="row">
    <div class="col">
      <h4>User名　<%= @shopping.user.name %>さん</h4>
      <p>住所</p>
      <p><%= @order.postal_code %></p>
      <p><%= @order.address %></p>
    </div>

    <div class="col">

      <h4>お支払い方法</h4>
      <p><%= @order.payment %></p>
      <p>クレジットカード情報</p>
      <a>No. <%= @credit.card_number %>
      有効期限　<%= @credit.month %> / <%= @credit.year %>
      </a>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 offset-8">
      <%= link_to "受注情報編集", edit_admin_order_path(@order), class: 'btn btn-light' %>
<br>
<br>
    </div>
  </div>
</div>