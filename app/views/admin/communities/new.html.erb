<div class="container">
  <div class="row justify-content-md-center mb-lg-5">
    <div class="col-md-10">
      <h2>コミュニティ新規登録</h2><br>

      <!-- form section -->
       <%= form_for @community, url: admin_communities_new_path(params[:id]) do |f| %>
        <div class="form-group">
        	<%= f.label :artist_name, "アーティスト名" %><br>
        	<%= @artist.artist_name %>
        </div>
        <div class="form-group">
          <%= f.label :name %><br>
          <%= f.text_field :name, class: "form-control", placeholder: "コミュニティ名" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %><br>
          <%= f.text_area :introduction, class: "form-control", placeholder: "コミュニティ紹介文" %>
        </div>
        <div class="form-action">
          <%= f.submit "登録", class: "btn btn-outline-success" %>
        </div>

      <% end %>
    </div>
  </div>
    <br>
    <br>
    <br>
    <br>
    <br>
</div>

