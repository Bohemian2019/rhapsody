<div class="container">

<!-- 定期購買申請者一覧 -->
<h4>定期購買者申請者</h4>

<% @subscriptions.each do |post| %>
  <table class="table">
    <thead>
      <tr>
        <th>日付</th>
        <th>User名</th>
        <th>アーティスト名</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= post.created_at.strftime('%Y年%m月%d日') %></td>
        <td><%= post.user.name %></td>
        <td><%= link_to admin_subscription_artist_path(post.artist.id) do %>
            <%= post.artist.artist_name %>
            <% end %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>


<!-- ページネーション -->
<div class="container">
  <div class="col-lg-6 offset-lg-4">
  <%= paginate @subscriptions %>
  </div>
</div>


</div>