<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light bd-navbar shadow fixed-top">
    <a class="navbar-brand" href="<%= root_path %>">Rhapsody</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto ml-3">
        <!-- Common -->
        <li class="nav-item">
          <a class="nav-link" href="<%= root_path %>">
            Home
          </a>
        </li>
        <!-- User section -->
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do %>
              <span>Log out</span>
            <% end %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= user_path(current_user.id) %>">
              Mypage 
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= shopping_cart_show_path(current_user.id) %>">
              Cart 
            </a>
          </li>
        <% else %>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_session_path %>">
              Log in
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="<%= new_user_registration_path %>">
              Sign up
            </a>
          </li>
        <% end %>
      </ul>
      <!-- Search form -->
      <%= form_with url: search_index_path, method: :get, local: true, class: "form-inline my-2 my-lg-0" do |f| %>
        <%= f.select :table_name, [["商品", "Item"], ["ユーザー", "User"], ["コミュニティ", "Community"]],{}, class: "form-control form-control-sm mr-2" %>
        <%= f.text_field :keyword, palceholder: "search" %>
        <%= f.submit("検索", class: "btn btn-secondary my-2 my-sm-0 ml-2") %> 
      <% end %>
    </div>
  </nav>
</header>
