<div class="container">
	<h2>コミュニティ名　<%= @community.name %></h2>
	<br>
	<div class="row">
		<div class="col">
			<table class="table">
				<thead>
        			<tr>
            			<th>Question一覧</th>
            			<th></th>
            			<th></th>
           			</tr>
           		</thead>
        		<tbody>
           		<% @questions.each do |question| %>
       			    <tr>
            			<td><strong>Q. <%= question.question %></strong></td>
            			<td><%= link_to "詳細", community_qa_show_path(@community,question.id), class: "btn btn-light" %></td>
						<% if defined? show %>
						<% if @questions.user_id == current_user.id %>
	    				<td><%= link_to "削除", community_question_index_path(@community),method: :delete,"data-confirm" => "Are you sure?" %></td>
	    				<% end %>
						<% end %>
					</tr>
				<% end %>
				</tbody>
			</table>
			<%= paginate @questions, class: "pagenate" %>
		</div>
	</div>
		<br>
	<div class="row">
		<div class="col-md-3 offset-md-8">
			<%= button_to '質問を投稿する', community_question_new_path, method: :get %>
			</div>
		</div>
	</div>
	<br>
</div>