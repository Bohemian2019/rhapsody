<div class="container">
  <div class="row">
    <div class="col">
      <% if @table_name == 'Item' %>
        <h4>検索結果: 商品</h4>
      <% elsif @table_name == 'User' %>
        <h4>検索結果: ユーザー</h4>
      <% else %>
        <h4>検索結果: コミュニティ</h4>
      <% end %>
    </div>
  </div>

  <div class="row justify-content-md-center">
    <div class="col-md-10">
      <ul>
        <% @searched.each do |s| %>
          <% if @table_name == 'Item' %>
            <!-- Item List -->
            <li class="row my-lg-5 py-3">
              <div class="col-sm-2 pr-0 pl-5">
                <%= attachment_image_tag s, :image, :fill, 100, 100, :size => "60x60", fallback: "no-item-image.jpg" %>
              </div>
              <div class="col-sm-5 px-0">
                <h5>アーティスト名:  <%= @artist.find(s.artist_id).artist_name %></h5><br>
                <h5>アルバム/シングル名:  <%= s.item_name %></h5><br>
              </div>
              <div class="col-sm-3 pl-0">
                <%= link_to '詳細', item_path(s.id), class: "btn btn-outline-secondary" %>
              </div>
            </li>
          <% elsif @table_name == 'User' %>
            <!-- User List -->
            <li class="row my-lg-5 py-3">
              <div class="col-sm-2 pr-0 pl-5">
                <%= attachment_image_tag s, :image, :fill, 100, 100, :size => "60x60", fallback: "no-user-image.jpg" %>
              </div>
              <div class="col-sm-5 px-0">
                <h5>ユーザー名:  <%= s.name %></h5><br>
                <h5>紹介文:  <%= s.introduction %></h5><br>
              </div>
              <div class="col-sm-3 pl-0">
                <%= link_to '詳細', user_path(s.id), class: "btn btn-outline-secondary" %>
              </div>
            </li>
          <% else %>
            <!-- Community List -->
            <li class="row my-lg-5 py-3">
              <div class="col-sm-2 pr-0 pl-5">
                <%= attachment_image_tag s, :image, :fill, 100, 100, :size => "60x60", fallback: "no-user-image.jpg" %>
              </div>
              <div class="col-sm-5 px-0">
                <h3><%= s.id %></h3>
                <h5>コミュニティ名:  <%= s.name %></h5><br>
                <h5>紹介文:  <%= s.introduction %></h5><br>
              </div>
              <div class="col-sm-2 pl-0">
                <%= link_to '詳細', communities_show_path(s.id), class: "btn btn-outline-secondary" %>
              </div>
              <% if user_signed_in? %>
              <% if current_user.admin == true %>
              <div class="col-sm-1">
                <%= link_to '削除', delete_community_path(s.id), method: :delete, class: "btn btn-outline-danger", "data-confirm" => "Are you sure?" %>
              </div>
            <% end %>
            <% end %>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @searched, class: "pagenate" %>
  </div>
</div>
