<div class="modal-header">
  <h5 class="modal-title">新規アーティスト登録</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  <%= form_with model: @artist, url: artists_path, id: "artist-create-form" do |ff| %>
    <%= render "layouts/error_messages", model: @artist %>

    <%= ff.label :artist_name, class: "form-control-label" %>
    <%= ff.text_field :artist_name, class: "form-control" %>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  <%= ff.submit "登録", class: "btn btn-light", id: "artist-submit" %>
<% end %>
</div>
