<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= render "layouts/sidebar", user: @user %>
    </div>
    <div class="col-md-8">
      <h2>マイコミュニティ</h2><br>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">コミュニティ名</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @community.each do |community| %>
          <tr>
            <td><%= community.community.name %></td>
            <td><%= link_to "詳細", communities_show_path(community.community.id), class: "btn btn-light" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <%= paginate @community %>
    </div>
    <% if current_user.id == @user.id %>
    <div class="col-md-5 offset-7">
      <%= link_to "新規コミュニティリクエスト", new_community_path, class: "btn btn-light" %>
    </div>
    <% end %>
  </div>
</div>
