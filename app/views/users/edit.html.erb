<main class="container">
  <br>
  <div class="row">
    <div class="col-md"></div>
    <div class="col-md-10">
      <h1>User edit</h1>
      <!-- Error messages -->
      <% if current_user.errors.any? %>
        <div id="error_explanation">
          <h2><%= current_user.errors.count %>のエラーが発生しました。</h2>
          <ul>
            <% current_user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Form section -->
      <%= form_for(@user) do |f| %>
        <div class="form-group">
          <%= f.label :postal_code %><br>
          <%= f.text_field :postal_code %>
        </div>
        <div class="form-group">
          <%= f.label :address %><br>
          <%= f.text_area :address %>
        </div>
        <div class="form-group">
          <%= f.label :phone_number %><br>
          <%= f.text_field :phone_number %>
        </div>
        <div class="form-group">
          <%= f.label :email %><br>
          <%= f.text_field :email %>
        </div>
        <div class="form-group">
        </div>
        <div class="form-group">   
          <%= image_tag attachment_url(@user, :image, :fill, 100, 100, format: "jpg", fallback: "no-user-image.jpg") %>
          <%= f.label :image %><br>
          <%= f.attachment_field :image, placeholder: "profile_image" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction %><br>
          <%= f.text_field :introduction %>
        </div>
        <div class="form-action">
          <%= f.submit "Update Profile", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    <div class="col-md"></div>
  </div>
  <br>
  <br>
</main>
