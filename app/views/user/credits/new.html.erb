<div class="container">
	<div class="row">
		<h1>クレジットカード情報登録</h1>
	</div>
<br>
	<div class="row">
		<h4>カード情報を入力してください</h4>
	</div>

	<div class="row">
		<div class="col-xs-3">
			<%= form_for(@credit_card, url: user_credits_path) do |f| %>
				カード名義人（半角ローマ字）
				<div class="field">
			    	<%= f.text_field :name %>
			 	</div>

			 	カード番号
			 	<div class="field">
			    	<%= f.number_field :card_number %>
			 	</div>

				<a>有効期限</a><br>

					<%= f.select :month, [["01", "01"], ["02", "02"], ["03", "03"], ["04", "04"], ["05", "05"], ["06", "06"],["07", "07"], ["08", "08"], ["09", "09"], ["10", "10"], ["11", "11"], ["12", "12"]],:prompt => "選択" %>

				<a>月</a>
				<a> / </a>

					<%= f.select :year, [["19", "19"], ["20", "20"], ["21", "21"], ["22", "22"], ["23", "23"], ["24", "24"],["25", "25"], ["26", "26"]],  :prompt => "選択" %>

				<a>年</a>
				<br>
				<br>

				<div class="action">
					<%= f.submit class: "btn btn-light" %>
			 	</div>
			<% end %>
			<br>
		</div>
	</div>
</div>