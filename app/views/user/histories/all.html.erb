<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "layouts/sidebar" %>
    </div>
    <div class="col-md-9">
      <h2>User購入履歴</h2><br>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">購入日</th>
            <th scope="col">点数</th>
            <th scope="col">合計金額</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @histories.each do |history| %>
          <tr>
            <td><%= l history.created_at, format: :long %></td>
            <td><%= history.shopping_cart.cart_items.sum(:quantity) %> 点</td>
            <td>¥ <%= history.shopping_cart.cart_items.sum(:price) %></td>
            <td><%= link_to "詳細", user_histories_path(history.id), class: "btn btn-outline-secondary" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= paginate @histories, class: "pagenate" %>
  </div>
</div>
