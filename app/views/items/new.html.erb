<div class="container">
  <div class="row justify-content-md-center mb-lg-5">
    <div class="col-md-10 mx-auto">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <h2>商品新規追加</h2><br>

      <!-- Form section -->
      <%= form_for @item, url: admin_create_item_path do |f| %>
        <!-- Error messages -->
        <%= render "layouts/error_messages", model: @item %>

        <div class="form-group">
          <%= f.label :artist_name %><br>
          <%= f.text_field :artist_name, class: "form-control", placeholder: "アーティスト名" %>
        </div>
        <div class="form-group">
          <%= f.label :item_name %><br>
          <%= f.text_field :item_name, class: "form-control", placeholder: "アルバム/シングル名" %>
        </div>
        <div class="form-group">
          <%= f.label :image %><br>
          <%= f.attachment_field :image, class: "form-file-input", placeholder: "item_image" %>
        </div>
        <div class="form-group">
          <%= f.label :price %><br>
          <%= f.text_field :price, class: "form-control", placeholder: "価格" %>
          <small class="form-text text-muted">価格は区切り無しの数値のみを入力してください</small>
        </div>
        <div class="form-group">
          <%= f.label :label_name %><br>
          <%= f.text_field :label_name, class: "form-control", placeholder: "レーベル名" %>
        </div>
        <div class="form-group">
          <%= f.label :genre %><br>
          <%= f.select :genre,[
            ["J-pop", "j-pop"],
            ["ロック", "rock"],
            ["ジャズ", "jazz"],
            ["クラシック", "classical"],
            ["ダンス", "dance"],
            ["R&B", "r&b"],
            ["メタル", "metal"]
          ], {}, class: "form-control", placeholder: "ジャンル名" %>
        </div>
        <div class="form-group">
          <table class="table">
            <tbody>
              <tr>
                <th>曲名</th>
                <th>ディスク番号</th>
                <th>Action</th>
              </tr>
              <%= f.nested_fields_for :songs, wrapper_tag: :tr do |ff| %>
                <td><%= ff.text_field :name, class: "form-control" %></td>
                <td><%= ff.number_field :disc_number, class: "form-control" %></td>
                <td><%= ff.remove_nested_fields_link 'Delete', class: "btn btn-danger", role: "button" %></td>
              <% end %>
            </tbody>
          </table>
          <%= f.add_nested_fields_link :songs, 'Add new', class: "btn btn-primary", role: "button" %>
        </div>
        <div class="form-group">
          <%= f.label :stock%><br>
          <%= f.text_field :stock, class: "form-control", placeholder: "在庫数" %>
        </div>
        <div class="form-action">
          <%= f.submit "登録", class: "btn btn-lg btn-outline-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <br>
  <br>
  <br>
  <br>
</div>


